rvm use 2.1.4 > /dev/null && rvm gemset use rakelib

if (( $# == 0 ))
then
  green "Converting all haml files to html ..."
  set *.haml
fi

for file in $*
do
  local +r HtmlFile=$(name $file).html
  print "$(green Converting) $(yellow $file) $(green to) $(yellow $HtmlFile)"
  haml $file > $(name $file).html
done
