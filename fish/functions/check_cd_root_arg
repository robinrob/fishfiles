# This function should cd into any destination EXCEPT root!
local +r Root=$1
if [[ -z $Root ]]
then
  [[ $PWD == "/" ]] && red "No fucking way!" && return 1

  Root='.'
fi

# [[ -n $Root ]] || (red "Must specify directory" && return 1)

# Fuck off!
[[ $Root == "/" ]] && red "No fucking way!" && return 1

cd $Root || return 1

return 0
