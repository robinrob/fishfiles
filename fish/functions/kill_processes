local +r -a Processes
Processes=($*)


if (( $#Processes < 1 ))
then
  red "Must give name(s) of process(es)!"
	
else
  for process in $Processes
  do
    print "$(green)Killing all $(yellow)${process} $(green)processes ...$(default)"
    
    ps aux | grep -i $process | awk '{print $2}' | xargs kill -KILL 2> /dev/null
  done
fi
