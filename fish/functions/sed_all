local +r SedExpression=$1

if [[ $# == 1 ]]
then
  local +r Where='.'
  local +r FindExpression='*'
elif [[ $# == 2 ]]
then
  local +r Where='.'
  local +r FindExpression=$2
elif [[ $# == 3 ]]
then
  local +r Where=$2
  local +r FindExpression=$3
fi


IFS="
"
for file in $(gfind $Where -name "$FindExpression" -type f)
do
  # Single-quotes around the $SedExpression are critical here
  # local +r SedSubExpr = (${(s///SedExpression)})
  # print $SedSubExpr
  cmd="gsed -i '$SedExpression' $file"
  yellow $cmd
  eval $cmd
done
