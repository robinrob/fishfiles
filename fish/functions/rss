local +r Feed=$1

if [[ -z $Feed ]]
then
  red "Must provide name of Feed"
fi

rvm gemset use rss > /dev/null 2> /dev/null

case $Feed in
  hacker)
    $RSS_HOME/rss.rb 'https://news.ycombinator.com/rss' ;;
  flight)
    $RSS_HOME/rss.rb 'http://www.flightglobal.com/rss/accidents-and-incidents-news-rss/' ;;
  flighta)
    $RSS_HOME/rss.rb 'http://www.flightglobal.com/rss/aviation-news-rss/' ;;
  flightar)
    $RSS_HOME/rss.rb 'http://www.flightglobal.com/rss/airlines-news-rss/' ;;
  news)
    $RSS_HOME/rss.rb 'http://www.theguardian.com/world/rss' ;;
  newse)
    $RSS_HOME/rss.rb 'http://www.theguardian.com/uk/environment/rss' ;;
  papers)
    $RSS_HOME/rss.rb 'http://www.sciencemag.org/rss/express.xml' ;;
  sig)
    $RSS_HOME/rss.rb 'https://signalvnoise.com/posts.rss' ;;
  space)
    $RSS_HOME/rss.rb 'http://phys.org/rss-Feed/space-news/space-exploration/' ;;
  science)
    $RSS_HOME/rss.rb 'http://www.sciencemag.org/rss/current.xml' 99;;
  sciencepodcast)
    $RSS_HOME/rss.rb 'http://www.sciencemag.org/rss/podcast.xml' ;;
  sciencenews)
    $RSS_HOME/rss.rb 'http://www.sciencemag.org/rss/news.xml' ;;
  sciencedaily)
    $RSS_HOME/rss.rb 'http://www.sciencedaily.com/newsFeed.xml' ;;
  fowler)
    $RSS_HOME/rss.rb 'http://martinfowler.com/feed.atom' ;;
esac
