local +r GrepExpression=$1
local +r FindExpression=$2
if [[ -n $3 ]]
then
  local +r Where=$3
else
  local +r Where="."
fi


IFS="
"
for file in $(gfind $Where -follow -name "*$FindExpression*" -type f)
do
  grep=$(grep -i $GrepExpression $file)
  if [[ -n $grep ]]
  then
    yellow $file
    print $grep | grep -i $GrepExpression
  fi
done
